<div class="movies">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Movies</h1>
    <%= link_to 'New Movie', '/movies/new', class: 'btn btn-custom' %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Synopsis</th>
        <th>Director</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.id %></td>
          <td><%= movie.name %></td>
          <td><%= movie.synopsis %></td>
          <td><%= movie.director %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination">
    <%= paginate @movies %>
  </div>
</div>